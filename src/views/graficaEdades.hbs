
<div class="container mt-4">
    <div class="row">
        <h1 class="col-md-8 offset-md-1">Grafica por edades</h1>
    </div>
    <hr>
    <div class="mt-4" id="chart_div"></div>
</div>

<script type="text/javascript">
    // Load the Visualization API and the corechart package.
    google.charts.load('current', {'packages':['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

    // Create the data table.
    //var data = new google.visualization.DataTable();
    var data = google.visualization.arrayToDataTable([
         ['Edad', 'casos Por edad', { role: 'style' }],
         ['0-30', {{datosFormRedis.cero}}, '#76A7FA'],            // RGB value
         ['31-40', {{datosFormRedis.uno}}, '#76A7FA'],            // English color name
         ['41-50', {{datosFormRedis.dos}}, '#76A7FA'],
         ['51-60', {{datosFormRedis.tres}}, '#76A7FA'],
         ['61-70', {{datosFormRedis.cuatro}}, '#76A7FA'],
         ['71-80', {{datosFormRedis.cinco}}, '#76A7FA'],
         ['mayores de 80', {{datosFormRedis.seis}}, '#76A7FA']
    ]);

    // Set chart options
    var options = {'title':'Grafica de casos por edades',
                    'width':1200,
                    'height':500,
                    hAxis: {title: 'Edades'},
                    vAxis: {title: 'Numero de casos'}};

    // Instantiate and draw our chart, passing in some options.
    var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
    chart.draw(data, options);
    }
</script>
